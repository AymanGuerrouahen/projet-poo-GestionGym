<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.poo.MembreController">

    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

    <Label text="GESTION DES MEMBRES" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10" alignment="CENTER">
        <TextField fx:id="txtNom" promptText="Nom" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="txtPrenom" promptText="Prénom" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <TextField fx:id="txtEmail" promptText="Email" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="txtTel" promptText="Téléphone" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Abonnement :" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <ComboBox fx:id="comboAbo" GridPane.rowIndex="2" GridPane.columnIndex="1" prefWidth="150"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER">
        <Button text="AJOUTER" onAction="#onAjouterClick"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;"/>

        <Button text="MODIFIER" onAction="#onModifierClick"
                style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-weight: bold;"/>
    </HBox>

    <Separator/>

    <VBox spacing="5">
        <Label text="Rechercher un membre :"/>
        <TextField fx:id="txtRecherche" promptText="Tapez un nom..." onKeyReleased="#onRechercheTape"/>

        <ListView fx:id="listeMembres" prefHeight="250"/>
    </VBox>

    <HBox spacing="10" alignment="CENTER">
        <Button text="SUPPRIMER SÉLECTION" onAction="#onSupprimerClick"
                style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
        <Button fx:id="btnSupprimer" text="SUPPRIMER SÉLECTION" onAction="#onSupprimerClick"
                style="-fx-background-color: #f44336; -fx-text-fill: white;"/>

        <Button text="Actualiser la liste" onAction="#onRafraichirClick"/>
    </HBox>

</VBox>