<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.controller.MembreController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Gestion des Membres"/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Rechercher :" style="-fx-font-weight: bold;"/>
        <TextField fx:id="searchField" promptText="Tapez un nom ou un prénom..." HBox.hgrow="ALWAYS"/>
    </HBox>

    <TableView fx:id="membreTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colNom" prefWidth="100" text="Nom"/>
            <TableColumn fx:id="colPrenom" prefWidth="100" text="Prénom"/>
            <TableColumn fx:id="colEmail" prefWidth="150" text="Email"/>
            <TableColumn fx:id="colTel" prefWidth="100" text="Téléphone"/>
            <TableColumn fx:id="colAbo" prefWidth="100" text="Abonnement"/>
        </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Nouveau" onAction="#handleNouveau" style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
        <Button text="Modifier sélection" onAction="#handleEditer" style="-fx-background-color: #FF9800; -fx-text-fill: white;"/>
        <Button text="Supprimer sélection" onAction="#handleSupprimer" style="-fx-background-color: #F44336; -fx-text-fill: white;"/>
    </HBox>

    <Separator />

    <Label text="Détails du Membre" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <Label text="Nom :" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="txtNom" promptText="Nom" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Prénom :" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
        <TextField fx:id="txtPrenom" promptText="Prénom" GridPane.columnIndex="3" GridPane.rowIndex="0"/>

        <Label text="Email :" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="txtEmail" promptText="Email" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Téléphone :" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
        <TextField fx:id="txtTel" promptText="06..." GridPane.columnIndex="3" GridPane.rowIndex="1"/>

        <Label text="Abonnement :" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <ComboBox fx:id="comboAbo" prefWidth="150" promptText="Choisir..." GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    </GridPane>

    <Button text="Enregistrer le membre" onAction="#handleEnregistrer"
            style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;"/>

</VBox>